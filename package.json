{
  "name": "@wasmio/wasmio",
  "version": "0.0.0",
  "type": "module",
  "description": "WASM tool chains for Go, Rust, Node and so on",
  "repository": "git+https://github.com/wasmio/wasmio.git",
  "author": "JounQin (https://www.1stG.me) <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/@wasmio/*",
    "packages/*"
  ],
  "packageManager": "pnpm@7.5.1",
  "scripts": {
    "build": "run-s build:tsc build:r",
    "build:r": "r -f cjs",
    "build:tsc": "tsc -b",
    "clean": "rimraf 'packages/**/{lib,*.tsbuildinfo}'",
    "codesandbox:install": "npx pnpm@7.5.1 i",
    "dev": "w -e docs --disableDotRule --publicPath /",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "lint:style": "stylelint . --cache",
    "lint:tsc": "tsc --noEmit",
    "postversion": "pnpm i --no-frozen-lockfile",
    "prepare": "simple-git-hooks",
    "prerelease": "pnpm build",
    "release": "changeset publish",
    "serve": "sirv dist -s",
    "test": "vitest run --coverage",
    "typecov": "type-coverage",
    "vercel-build": "w -e docs -p --publicPath /",
    "version": "changeset version"
  },
  "devDependencies": {
    "@1stg/app-config": "^6.1.2",
    "@1stg/lib-config": "^8.1.1",
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.2",
    "@pkgr/webpack": "^3.1.2",
    "@pkgr/webpack-mdx": "^2.0.3",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/node": "^18.0.4",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/web": "^0.0.69",
    "@wasmio/go": "workspace:*",
    "@wasmio/tinygo": "workspace:*",
    "c8": "^7.14.0",
    "github-markdown-css": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "sirv-cli": "^2.0.2",
    "size-limit": "^7.0.8",
    "tsx": "^3.8.0",
    "type-coverage": "^2.22.0",
    "typescript": "^4.7.4",
    "unplugin-auto-import": "^0.9.3",
    "vitest": "^0.18.1",
    "wasmio": "workspace:*"
  },
  "resolutions": {
    "prettier": "^2.7.1"
  },
  "commitlint": {
    "extends": "@1stg"
  },
  "eslintConfig": {
    "extends": "@1stg",
    "rules": {
      "react/react-in-jsx-scope": "off"
    },
    "overrides": [
      {
        "files": ".github/*.yml",
        "rules": {
          "unicorn/filename-case": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "coverage",
    "dist",
    "lib",
    "/packages/**/CHANGELOG.md",
    "/pnpm-lock.yaml",
    "!/.github",
    "!/.*.cjs"
  ],
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-config"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "size-limit": [
    {
      "path": "packages/@wasmio/go/lib/index.js"
    },
    {
      "path": "packages/@wasmio/tinygo/lib/index.js"
    },
    {
      "path": "packages/wasmio/lib/index.js"
    }
  ],
  "stylelint": {
    "extends": "@1stg/stylelint-config"
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
